{
    "private": true,
    "version": "1.0.0",
    "author": "Sreekar Venkata Nutulapati",
    "scripts": {
        "build:models": "yarn workspace @burger-house/models build",
        "prebuild:web": "yarn build:models",
        "build:web": "yarn workspace @burger-house/web build",
        "dev:server": "yarn workspace @burger-house/server dev",
        "dev:web": "yarn workspace @burger-house/web dev",
        "predev": "yarn build:models",
        "dev": "npm-run-all --parallel dev:server dev:web",
        "build:server": "yarn workspace @burger-house/server build",
        "heroku-postbuild": "yarn build:models && yarn build:server",
        "start": "yarn workspace @burger-house/server start"
    },
    "workspaces": {
        "packages": [
            "packages/*"
        ],
        "nohoist": [
            "**/parcel",
            "**/parcel/**"
        ]
    },
    "devDependencies": {
        "@parcel/packager-raw-url": "^2.1.1",
        "@parcel/transformer-sass": "^2.1.1",
        "@parcel/transformer-webmanifest": "^2.0.1",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2"
    }
}
