{
  "name": "root",
  "private": true,
  "scripts": {
    "build:models": "npx lerna run build --scope @burger-house/models",
    "prebuild:web": "npm run build:models",
    "build:web": "npx lerna run build --scope @burger-house/web",
    "dev:server": "npx lerna run dev --scope @burger-house/server",
    "dev:web": "npx lerna run dev --scope @burger-house/web", 
    "predev": "npm run build:models",
    "dev": "npm-run-all --parallel dev:server dev:web",
    "prebuild:server": "npm run build:models",
    "build:server": "npx lerna run build --scope @burger-house/server",
    "build": "npm-run-all build:server",
    "start": "npx lerna run start --scope @burger-house/server "
  },
  "devDependencies": {
    "lerna": "^5.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
